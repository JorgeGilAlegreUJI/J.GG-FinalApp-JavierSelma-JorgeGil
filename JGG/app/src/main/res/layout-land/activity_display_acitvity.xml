<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landscape2"
    tools:context=".DisplayAcitvity">


    <ImageView
        android:id="@+id/Portrait"
        android:layout_width="116dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054"
        app:srcCompat="@drawable/aatrox" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:background="#8A050505"
        android:gravity="center"
        android:text="nunu Y willump"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toEndOf="@+id/Portrait"
        app:layout_constraintTop_toTopOf="@+id/Portrait"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TagsTitle"
        android:layout_width="376dp"
        android:layout_height="45dp"
        android:background="#8A050505"
        android:gravity="center"
        android:text="Tags"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/attackValue"
        app:layout_constraintTop_toBottomOf="@+id/attackValue"
        app:layout_constraintVertical_bias="0.206" />


    <Button
        android:id="@+id/button2"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:onClick="displayLore"
        android:text="Show Lore"
        android:textColor="@color/white"
        app:backgroundTint="@color/IndianRed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TagsTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TagsTitle"
        app:layout_constraintTop_toBottomOf="@+id/TagsTitle"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:background="#8A050505"
        android:gravity="center"
        android:text="the Boy Who Shattered Time"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Name"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/Attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8A050505"
        android:gravity="center"
        android:text=" Attack "
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Portrait"
        app:layout_constraintTop_toBottomOf="@+id/Portrait"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/attackValue"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="#8A050505"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Attack"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Attack"
        app:layout_constraintTop_toBottomOf="@+id/Attack"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/defenseValue"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="#8A050505"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Defense"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Defense"
        app:layout_constraintTop_toBottomOf="@+id/Defense"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/difficultyValue"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="#8A050505"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Difficulty"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Difficulty"
        app:layout_constraintTop_toBottomOf="@+id/Difficulty"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/magicValue"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="#8A050505"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Magic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Magic"
        app:layout_constraintTop_toBottomOf="@+id/Magic"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/Defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8A050505"
        android:gravity="center"
        android:text=" Defense "
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toEndOf="@+id/Attack"
        app:layout_constraintTop_toTopOf="@+id/Attack"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Magic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8A050505"
        android:gravity="center"
        android:text=" Magic "
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toEndOf="@+id/Defense"
        app:layout_constraintTop_toTopOf="@+id/Defense"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8A050505"
        android:gravity="center"
        android:text=" Difficulty "
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/Magic"
        app:layout_constraintTop_toTopOf="@+id/Magic"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ab1"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:onClick="displayAbilityInfo"
        app:layout_constraintStart_toEndOf="@+id/Title"
        app:layout_constraintTop_toTopOf="@+id/Title"
        app:srcCompat="@drawable/aatrox" />

    <ImageView
        android:id="@+id/ab2"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:elevation="4dp"
        android:onClick="displayAbilityInfo"
        app:layout_constraintStart_toEndOf="@+id/ab1"
        app:layout_constraintTop_toTopOf="@+id/ab1"
        app:srcCompat="@drawable/aatrox" />

    <ImageView
        android:id="@+id/ab3"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="36dp"
        android:elevation="4dp"
        android:onClick="displayAbilityInfo"
        app:layout_constraintStart_toStartOf="@+id/ab1"
        app:layout_constraintTop_toBottomOf="@+id/ab1"
        app:srcCompat="@drawable/aatrox" />

    <ImageView
        android:id="@+id/ab4"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="36dp"
        android:elevation="4dp"
        android:onClick="displayAbilityInfo"
        app:layout_constraintStart_toStartOf="@+id/ab2"
        app:layout_constraintTop_toBottomOf="@+id/ab2"
        app:srcCompat="@drawable/aatrox" />

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#9FA52A2A"
        app:layout_constraintBottom_toBottomOf="@+id/ab1"
        app:layout_constraintEnd_toEndOf="@+id/ab1"
        app:layout_constraintStart_toStartOf="@+id/ab1"
        app:layout_constraintTop_toTopOf="@+id/ab1" />

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#9FA52A2A"
        app:layout_constraintBottom_toBottomOf="@+id/ab2"
        app:layout_constraintEnd_toEndOf="@+id/ab2"
        app:layout_constraintStart_toStartOf="@+id/ab2"
        app:layout_constraintTop_toTopOf="@+id/ab2" />

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#9FA52A2A"
        app:layout_constraintBottom_toBottomOf="@+id/ab3"
        app:layout_constraintEnd_toEndOf="@+id/ab3"
        app:layout_constraintStart_toStartOf="@+id/ab3"
        app:layout_constraintTop_toTopOf="@+id/ab3" />

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#9FA52A2A"
        app:layout_constraintBottom_toBottomOf="@+id/ab4"
        app:layout_constraintEnd_toEndOf="@+id/ab4"
        app:layout_constraintStart_toStartOf="@+id/ab4"
        app:layout_constraintTop_toTopOf="@+id/ab4" />


</androidx.constraintlayout.widget.ConstraintLayout>